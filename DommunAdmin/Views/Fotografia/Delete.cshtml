@model DommunAdmin.Models.FotografiaDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Fotografía</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.imagen)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.imagen)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.valida)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.valida)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.esPrincipal)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.esPrincipal)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.isActive)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.isActive)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="submit" value="Delete" class="btn btn-danger" />                         
                        <a asp-action="Index" class="btn btn-info">Regresar</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>